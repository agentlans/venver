#!/usr/bin/bash

# Prints out the name of the present working virtual environment (PWVE)

PY=`which python`
echo $PY | grep ~/.venv > /dev/null
if [ $? -eq 0 ]; then
	# Get the directory the Python is in
	echo $PY | sed -E 's!^.*/\.venv/([^/]*)/bin/python$!\1!'
else
	# Not in any virtual environment
	echo ""
fi

